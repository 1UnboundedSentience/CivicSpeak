<html>
<head>
  <title>OraStory</title>
</head>
<body>
  <h1>OraStory</h1>
    <p>A crowdsourced public speaking review service</p>
    <%= form_for(:session, url: login_path, class: "pure-form") do |f| %>
      <fieldset>
      <legend>Login to Practice Speaking</legend>
      <%= f.label :email %>
      <%= f.email_field :email, placeholder: "E-mail"%><br>

      <%= f.label :password %>
      <%= f.password_field :password, placeholder: "Password"%><br>

      <%= f.submit "Log in" %>
      </fieldset>
    <% end %>
